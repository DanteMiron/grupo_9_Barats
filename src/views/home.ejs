<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head')%>

<body>
    <%- include('./partials/header')%>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="https://www.stockcenter.com.ar/dw/image/v2/BDTF_PRD/on/demandware.static/-/Sites-StockCenter-Library/default/dw981f5a99/20feb/full2lottoverano.jpg?sw=1920&sfrm=png&q=90" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://www.stockcenter.com.ar/dw/image/v2/BDTF_PRD/on/demandware.static/-/Sites-StockCenter-Library/default/dwccf5e4f3/20feb/full1imbatibles.gif?sw=1920&sfrm=gif&q=90" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://www.stockcenter.com.ar/dw/image/v2/BDTF_PRD/on/demandware.static/-/Sites-StockCenter-Library/default/dwbe9280b3/06ene/fulltoppertoallas.jpg?sw=1920&sfrm=jpg&q=90" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
        <main class="mainHome">
            <section class="sectionHome">
                <h3 class="tituloHome">OFERTAS</h3>
                <% products.forEach((product,index) => { %>
                
                <div class="articulo">
                    <a href="/products/<%= product.id %>" class="productLink">
                    <img src="/productImg/<%= products[index].image ? products[index].image : 'default.png'; %>" alt="" class="imagen-articulo">
                    <p class="descripcion"><%= products[index].name %> </p>
                    <p class="precio">$<%= products[index].price %> </p>
                    <p class="promocion-articulo"><%= products[index].fees %>  cuotas sin interes</p>
                    </a>
                </div>
              
                 <% }) %>
            </section>
            <section class="sectionHome">
                <h3 class="tituloHome">AHORA 12</h3>
                <% ahora12.forEach((product,index) => { %>
                
                    <div class="articulo">
                        <a href="/products/<%= product.id %>" class="productLink">
                        <img src="/productImg/<%= ahora12[index].image ? ahora12[index].image : 'default.png'; %>" alt="" class="imagen-articulo">
                        <p class="descripcion"><%= ahora12[index].name %> </p>
                        <p class="precio">$<%= ahora12[index].price %> </p>
                        <p class="promocion-articulo"><%= ahora12[index].fees %>  cuotas sin interes</p>
                        </a>
                    </div>
                  
                     <% }) %>
            </section>
        </main>
        <%- include('./partials/footer')%>
</body>

</html>