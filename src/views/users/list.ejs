<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head')%>

    <body>

        <%- include('../partials/header')%>
            <main class="mainList">
                
                    <table class="table">
                        <tr class="tr">
                            <th class="thImg"></th>
                            <th class="th">Nombre</th>
                            <th class="th">Apellido</th>
                            <th class="th">Telefono</th>
                            <th class="th">Email</th>
                            <th class="thImgDos"></th>
                        </tr>
                        <% for(i=0 ; users.length> i; i++){ %>
                        <tr class="tr">
                            <td class="tdImg"><img src="/profileImg/<%= users[i].image ? users[i].image : 'default.png'; %>" alt="imgUser" class="imgList"></td>
                            <td class="td"><%= users[i].name %> </td>
                            <td class="td"><%= users[i].last_name %></td>
                            <td class="td"><%= users[i].tel%></td>
                            <td class="td"><%= users[i].email %></td>
                            <td class="td"><a href="/users/<%= users[i].id %>/edit"><button type="submit" id="icon"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
                                <form action="/users/<%= users[i].id %>?_method=DELETE" method="POST" class="borrar">
                                    <button type="submit" id="icon" class="buttonConfirm"><i class="fa fa-trash" aria-hidden="true"></i></button></a>
                                </form>
                                <form action="/users/<%=users[i].id%>/admin?_method=PUT" method="POST" class="buttonAdmin">
                                    <button type="submit" id="icon"><i class="fa fa-unlock" aria-hidden="true"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                      </table>
                   
            </main>
            <script src="../../js/buttonConfirm.js"></script>
            <script src="../../js/buttonAdmin.js"></script>
            <%- include('../partials/footer')%>
    </body>

</html>