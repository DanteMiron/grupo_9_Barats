<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head')%>

    <body>

        <%- include('../partials/header')%>
            <main class="mainRegister">
                <h2 class="tituloRegister">EDITAR CUENTA</h2>
                <form action="/users/<%=userId[0].id%>/edit?_method=PUT" method="POST" class="formulario"
                    enctype="multipart/form-data">
                    <label class="labelRegister" for="name">Nombre y Apellido :</label><input class="inputRegister"
                        type="text" name="name" id="name" placeholder="<%= userId[0].name %>">
                        <%= (locals.errors && errors.name) ? errors.name.msg + ' üëÜ' : "" %>
                    <label class="labelRegister" for="email">E-mail :</label><input class="inputRegister" type="email"
                        name="email" id="email" placeholder="<%= userId[0].email %>">
                        <%= (locals.errors && errors.email) ? errors.email.msg + ' üëÜ' : "" %>
                    <label class="labelRegister" for="tel">Tel√©fono :</label><input class="inputRegister" type="num"
                        name="tel" id="tel" placeholder="<%= userId[0].tel %>">
                        <%= (locals.errors && errors.tel) ? errors.tel.msg + ' üëÜ' : "" %>
                    <label for="img" class="labelRegister">Imagen de perfil</label><input type="file"
                        class="inputRegister" name="img" id="img" accept="image/*">
                    <%= (locals.errors && errors.img) ? errors.img.msg + ' üëÜ' : "" %>
                        <label class="labelRegister" for="password">Contrase√±a :</label><input class="inputRegister"
                            type="password" name="password" placeholder="<%= userId[0].password %>" id="password">
                            <%= (locals.errors && errors.password) ? errors.password.msg + ' üëÜ' : "" %>
                        <label class="labelRegister" for="passwordConfirmed">Confirmar Contrase√±a :</label><input
                            class="inputRegister" type="password" name="passwordConfirmed" id="passwordConfirmed">
                        <div id="boton">
                            <button type="reset">Borrar</button>
                            <button type="submit">Enviar</button>
                        </div>
                </form>

            </main>
            <%- include('../partials/footer')%>
    </body>

</html>